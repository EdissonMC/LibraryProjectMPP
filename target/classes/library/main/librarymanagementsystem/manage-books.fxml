<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.main.librarymanagementsystem.application.LibraryController">

    <children>
        <Text layoutX="61.0" layoutY="145.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Add new book" textAlignment="CENTER" wrappingWidth="149.0">
            <font>
                <Font name="System Bold" size="19.0" />
            </font>
        </Text>
        <TextField fx:id="author" layoutX="61.0" layoutY="285.0" promptText="Author name" />
        <TextField fx:id="book" layoutX="61.0" layoutY="175.0" promptText="Book name" />
        <TextField fx:id="isbn" layoutX="61.0" layoutY="209.0" promptText="ISBN" />
        <TextField fx:id="category" layoutX="61.0" layoutY="245.0" promptText="Category" />
        <Button layoutX="95.0" layoutY="319.0" mnemonicParsing="false" onAction="#addItem" text="Add book">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <ListView fx:id="booksListView" layoutX="344.0" layoutY="175.0" prefHeight="406.0" prefWidth="596.0" stylesheets="@listview.css" />
        <Text layoutX="471.0" layoutY="144.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Author;Title;ISBN;Category" wrappingWidth="265.0">
            <font>
                <Font name="System Bold" size="19.0" />
            </font>
        </Text>
        <TextField fx:id="search" layoutX="390.0" layoutY="43.0" onKeyTyped="#searchBook" prefHeight="31.0" prefWidth="392.0" promptText="Search..." />
        <Button fx:id="edit" layoutX="802.0" layoutY="595.0" mnemonicParsing="false" onAction="#editBook" text="Edit">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
        <Button fx:id="delete" layoutX="877.0" layoutY="595.0" mnemonicParsing="false" onAction="#deleteBook" text="Delete">
            <font>
                <Font size="15.0" />
            </font>
        </Button>
    </children>


</AnchorPane>
